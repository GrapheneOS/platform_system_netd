// APCT build target for metrics tests

cc_benchmark {
    name: "netd_benchmark",
    defaults: ["netd_defaults"],
    shared_libs: [
        "libbase",
        "libbinder",
        "liblog",
        "libnetd_client",
        "libnetdutils",
        "libutils",
    ],
    static_libs: [
        "libnetd_test_dnsresponder",
        "dnsresolver_aidl_interface-cpp",
        "netd_aidl_interface-cpp",
        "netd_event_listener_interface-cpp",
    ],
    aidl: {
        include_dirs: ["system/netd/server/binder"],
    },
    include_dirs: [
        "system/netd/include",
        "system/netd/client",
        "system/netd/server",
        "system/netd/server/binder",
    ],
    header_libs: [
        "libnetd_resolv_headers",
    ],
    srcs: [
        "main.cpp",
        "connect_benchmark.cpp",
        "dns_benchmark.cpp",
    ],
}

cc_benchmark {
    name: "bpf_benchmark",
    defaults: ["netd_defaults"],
    shared_libs: [
        "libbase",
        "libbpf_android",
        "libnetdutils",
    ],
    srcs: [
        "bpf_benchmark.cpp",
    ],
}
